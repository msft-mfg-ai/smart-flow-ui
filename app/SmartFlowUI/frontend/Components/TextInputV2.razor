<MudPaper Elevation="25" Class="d-flex flex-row px-2" Style="">
    <MudTextField T="string"
                  AutoFocus="true"
                  Immediate=true 
                  MaxLines=5 Disabled=@Disabled 
                  AutoGrow="true"
                  Placeholder="Enter your message..."
                  DisableUnderLine="true" 
                  Class="mt-n4 mx-4 py-4" 
                  OnKeyUp="@OnKeyUpAsync"
                  @bind-Value="@Value" />

    @if (!string.IsNullOrEmpty(ImageUrl) && ImageUrl.Contains("png"))
    {
        <MudImage Src="@ImageUrl" Alt="Image" Elevation="25" Width="100" Height="75" Class="rounded-lg ma-4" />
    }

    <MudButton OnClick="OnAskClickedAsync" Disabled=@Disabled StartIcon="@Icons.Material.Outlined.Send" Color="Color.Secondary">Send</MudButton>
    <MudIconButton Icon=@Icons.Material.Filled.Cancel Color="Color.Secondary" ButtonType="ButtonType.Reset" OnClick="@OnClearChatAsync" Disabled=@Disabled />
</MudPaper>